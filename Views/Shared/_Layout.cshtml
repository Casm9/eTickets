<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - eTickets</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;700&display=swap" rel="stylesheet">
</head>
<body>
    <nav>
        <a id="brand" asp-controller="Movies" asp-action="Index">eTickets</a>

        <form id="search-form" asp-controller="Movies" asp-action="Filter">
            <input name="searchString" type="text" id="search-bar" placeholder="Search...">
            <button type="submit" id="search-button">Search</button>
        </form>

        <div id="links">
            <a class="nav-link" asp-area="" asp-controller="Movies" asp-action="Index">Movies</a>
            <a class="nav-link" asp-controller="Cinemas" asp-action="Index">Cinemas</a>
            <a class="nav-link" asp-controller="Producers" asp-action="Index">Producers</a>
            <a class="nav-link" asp-controller="Actors" asp-action="Index">Actors</a>
            <a class="nav-link" asp-controller="Orders" asp-action="Index">Orders</a>
        </div>
    </nav>
    <div>
        <main>
            @RenderBody()
        </main>
    </div>

    <footer>
        <div>
            &copy; 2023 - eTickets
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
